<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">12dp</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogTheme.Loading" parent="DialogTheme">
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">60%</item>
    </style>

    <style name="DialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonDialog.Primary" parent="ButtonDialog">
        <item name="android:background">@drawable/background_button_blue</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">@android:string/ok</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonDialog.Secondary" parent="ButtonDialog">
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:text">@android:string/cancel</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>